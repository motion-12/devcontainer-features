{
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-18",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": ["mads-hartmann.bash-ide-vscode"]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "npm install -g @devcontainers/cli && echo 'source <(${containerWorkspaceFolder}/utils completions)' >> ~/.bashrc",
  "hostRequirements": {
    "cpus": 4
  }
}
